{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",

    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
      "${authors}"
    ],
    "contact": {
      "homepage": "${homepage}",
      "sources": "${sources}",
      "issues": "${issues}"
    },

    "license": "${license}",
    "icon": "assets/${mod_id}/icon.png",
  
    "environment": "*",
    "entrypoints": {
      "main": [
        "de.veraimt.litelocker.LiteLockerFabric"
      ]
    },
    "mixins": [
      "litelocker.mixins.json"
    ],

    "depends": {
      "fabricloader": ">=0.13",
      "fabric": "*",
      "minecraft": "${fabric_mc_version}",
      "java": ">=17"
    }
  }
  